extends ../../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/form.css")

block content
    main
        form.product-form(action="/admin/product-add" method="POST")
            div.form-control
                label(for="title") Title 
                input(type="text", name="title", placeholder="Enter product name here..." required)#title
            div.form-control
                label(for="price") Price 
                input(type="number", name="price", placeholder="Enter product price here...",step="0.01" required)#price
            div.form-control
                label(for="description") Description 
                textarea(name="description", rows=5 placeholder="Enter description here...")#description
            div.form-control
                label(for="imageUrl") Image Url 
                input(type="url", name="imageUrl", placeholder="Paste product image url here...")#imageUrl
            button.btn(type="submit") Add

                