extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet" href="/css/product.css")

block content
    main 
        div.grid
            if prods.length > 0
                each product in prods
                    div.product-card
                        div.product-tumb
                            if typeof(product.imageUrl) == 'object'
                                - var url = product.imageUrl[0];
                            else
                                - var url = product.imageUrl;
                            img(src=url, alt="missing image here" srcset="")
                        div.product-details
                            span.product-catagory 
                            h4
                                a(href='/product/'+product.id) #{product.title}
                            p #{product.description}
                            div.product-bottom-details
                                div.product-price 
                                    small $96.00 
                                    span $#{product.price} 
                                div.product-links
                                    a(href="") 
                                        i.fa.fa-heart
                                    a(href="/add-to-cart/"+product.id) 
                                        i(class="fa fa-shopping-cart")
            else 
                h1 No Product Found.!

